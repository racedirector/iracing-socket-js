{
  "compilerOptions": {
    "pretty": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017", "ESNext", "dom"],
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
