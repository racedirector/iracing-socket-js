{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "packages",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es6",
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",
    "paths": {
      "@racedirector/iracing-socket-js": [
        "packages/iracing-socket-js/src/index.ts"
      ],
      "@racedirector/iracing-fuel-server": [
        "packages/iracing-fuel-server/src/index.ts"
      ]
    }
  },
  "include": [
    "packages"
  ],
  // "references": [
  //   { "path": "packages/iracing-socket-js/"},
  //   { "path": "packages/iracing-fuel-server/"}
  // ]
}