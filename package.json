{
  "name": "iracing-socket",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/iracing-*",
      "packages/consumers/*",
      "examples/*"
    ]
  },
  "scripts": {
    "clean": "rimraf node_modules packages/{*,consumers/*}/node_modules",
    "prebuild": "rimraf packages/{*,consumers/*}/dist",
    "build": "tsc --project tsconfig.build.json && bob build",
    "build:watch": "npx tsc-watch --project tsconfig.build.json --onSuccess \"bob build\"",
    "test": "jest --no-watchman",
    "lint": "eslint --ext .ts .",
    "prettier": "prettier --ignore-path .gitignore --write --list-different \"**/*.{ts,tsx}\"",
    "prettier:check": "prettier --ignore-path .gitignore --check \"**/*.{ts,tsx}\"",
    "types:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/react": "12.1.3",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.179",
    "@types/node": "17.0.12",
    "@types/react": "17.0.39",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "bob-the-bundler": "1.6.1",
    "chalk": "4.1.2",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "get-yarn-workspaces": "1.0.2",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-websocket-mock": "2.3.0",
    "lint-staged": "12.3.7",
    "lodash": "4.17.21",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "timekeeper": "2.2.0",
    "ts-jest": "27.1.4",
    "tsc-watch": "4.6.2",
    "tslib": "2.3.1",
    "typescript": "4.5.5",
    "waait": "1.0.5"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.2.0"
}
