{
  "name": "@racedirector/iracing-fuel-server",
  "version": "0.0.1",
  "description": "Express graphql server for queryable fueldata.ini.",
  "engines": {
    "node": ">=14 <15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/racedirector/iracing-server.git",
    "directory": "packages/iracing-server"
  },
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index",
    "dev": "nodemon --config restart.json",
    "clean": "rm -rf coverage build tmp",
    "prebuild": "npm run lint",
    "prepack": "bob prepack",
    "build": "yarn prebuild && tsc -p ./tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "config-ini-parser": "^1.6.1",
    "cors": "2.8.5",
    "express": "^4.17.1",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  }
}