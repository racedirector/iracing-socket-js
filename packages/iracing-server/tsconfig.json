{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "paths": {
      "@server/*": ["src/*"],
      "@tests/*": ["__tests__/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.graphql", "__tests__/**/*"],
  "exclude": ["node_modules", "build"]
}
