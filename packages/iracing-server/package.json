{
  "name": "@racedirector/iracing-server",
  "version": "0.0.1",
  "description": "Express server for live iRacing data from shared memory.",
  "engines": {
    "node": ">=14 <15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/racedirector/iracing-server.git",
    "directory": "packages/iracing-server"
  },
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index",
    "dev": "nodemon --config restart.json",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "clean": "rimraf coverage build tmp",
    "lint": "eslint **/*.ts",
    "test": "jest",
    "prepack": "bob prepack"
  },
  "dependencies": {
    "@racedirector/iracing-socket-js": "^2.0.0",
    "express": "^4.17.1",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.1.1",
    "module-alias": "^2.2.2",
    "winston": "^3.3.3"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "type": "commonjs"
}